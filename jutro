<h2>Obliczenia dla f(x) = a x² + b x + c</h2>

a: <input id="a" type="number" step="any"><br>
b: <input id="b" type="number" step="any"><br>
c: <input id="c" type="number" step="any"><br><br>

<button onclick="oblicz()">Oblicz</button>

<pre id="wynik"></pre>

<script>
function oblicz() {
    let a = parseFloat(document.getElementById("a").value);
    let b = parseFloat(document.getElementById("b").value);
    let c = parseFloat(document.getElementById("c").value);

    if (a === 0) {
        document.getElementById("wynik").textContent = "a ≠ 0 !!!";
        return;
    }

    let delta = b*b - 4*a*c;
    let p = -b / (2*a);
    let q = c - (b*b)/(4*a);

    let x1, x2;

    if (delta > 0) {
        x1 = (-b - Math.sqrt(delta)) / (2*a);
        x2 = (-b + Math.sqrt(delta)) / (2*a);
    } else if (delta === 0) {
        x1 = x2 = -b / (2*a);
    } else {
        x1 = "pierwiastki zespolone";
        x2 = "pierwiastki zespolone";
    }

    let kanoniczna = `f(x) = ${a}(x - ${p})² + ${q}`;

    let iloczynowa;
    if (delta >= 0) {
        iloczynowa = `f(x) = ${a}(x - ${x1})(x - ${x2})`;
    } else {
        iloczynowa = "brak postaci iloczynowej (pierwiastki zespolone)";
    }

    document.getElementById("wynik").textContent =
        "Δ = " + delta +
        "\nx1 = " + x1 +
        "\nx2 = " + x2 +
        "\np = " + p +
        "\nq = " + q +
        "\nPostać kanoniczna: " + kanoniczna +
        "\nPostać iloczynowa: " + iloczynowa +
        "\nPunkt przecięcia z osią Y: (0, " + c + ")";
}
</script>

</body>
